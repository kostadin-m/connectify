{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@assets": [
        "./src/assets",
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@types": [
        "./src/types.ts"
      ],
      "@ui/*": [
        "./src/components/ui/*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src",
    "setupTest.test.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}